<Window x:Class="SimonWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simon WPF" Height="600" Width="600" Background="Black">
    <DockPanel Margin="10" Background="Black">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8" >
            <Button x:Name="BtnStart" Content="Iniciar" Width="100" Height="36" Margin="6" Click="BtnStart_Click"/>
            <TextBlock x:Name="TxtStatus" VerticalAlignment="Center" Margin="6" FontSize="30" Foreground="White" FontWeight="Bold">Presiona Iniciar</TextBlock>
        </StackPanel>

        <!-- Botones -->
        <Border DockPanel.Dock="Top" BorderBrush="Gray" BorderThickness="1" Padding="6" Background="Transparent">
            <UniformGrid x:Name="ButtonGrid" Rows="4" Columns="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Border>
    </DockPanel>
</Window>
